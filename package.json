{
  "name": "code-review-action",
  "version": "1.0.0",
  "description": "Multi-provider AI code review GitHub Action",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "coverage:report": "jest --coverage --coverageReporters=text-summary",
    "coverage:check": "jest --coverage --passWithNoTests --coverageThreshold='{\"global\":{\"branches\":70,\"functions\":75,\"lines\":80,\"statements\":80}}'",
    "security:check": "npm audit --audit-level=moderate",
    "benchmark": "node --expose-gc scripts/benchmark.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "build:action": "ncc build src/index.ts -o dist --source-map",
    "build:all": "npm run build && npm run build:action",
    "build:only": "ncc build src/index.ts -o dist",
    "package": "npm run build"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "openai",
    "claude",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.1",
    "@anthropic-ai/sdk": "^0.68.0",
    "@google-ai/generativelanguage": "^2.4.0",
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^20.0.1",
    "google-auth-library": "^9.4.0",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
