{
  "name": "code-review-github-action",
  "version": "1.0.0",
  "description": "GitHub Action for automated code review",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "coverage:report": "jest --coverage --coverageReporters=text-summary",
    "coverage:check": "jest --coverage --passWithNoTests --coverageThreshold='{\"global\":{\"branches\":60,\"functions\":60,\"lines\":60,\"statements\":60}}'",
    "security:check": "npm audit --audit-level=moderate",
    "benchmark": "node --expose-gc scripts/benchmark.js",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "build:action": "ncc build src/index.ts -o dist --source-map",
    "build:all": "npm run build && npm run build:action",
    "start": "node src/index.js"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@eslint/js": "^9.39.0",
    "@google/generative-ai": "^0.24.1",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.14.197",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "openai": "^6.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.4.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/code-review-github-action.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "automation"
  ],
  "author": "",
  "license": "MIT"
}
