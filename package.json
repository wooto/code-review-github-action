{
  "name": "code-review-github-action",
  "version": "1.0.0",
  "description": "GitHub Action for automated code review",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "coverage:report": "jest --coverage --coverageReporters=text-summary",
    "coverage:check": "jest --coverage --passWithNoTests --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "security:check": "npm audit --audit-level=moderate",
    "benchmark": "node --expose-gc scripts/benchmark.js",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "start": "node src/index.js"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/__mocks__/**"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary",
      "clover"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.test.{js,ts}",
      "**/?(*.)+(spec|test).{js,ts}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/code-review-github-action.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "automation"
  ],
  "author": "",
  "license": "MIT"
}
